<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 图片选择权限 - Android 14 的 Selected Photos Access -->
    <uses-permission
        android:name="android.permission.READ_MEDIA_VISUAL_USER_SELECTED"
        android:minSdkVersion="34" /> <!-- 图片选择权限 - Android 13及以上版本 -->
    <uses-permission
        android:name="android.permission.READ_MEDIA_IMAGES"
        android:maxSdkVersion="34" /> <!-- 图片选择权限 - Android 12及以下版本 -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" /> <!-- 后台启动权限 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" /> <!-- 后台保活，添加前台服务权限 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" /> <!-- 悬浮窗权限 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />

    <application
        android:name=".common.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/yiyi_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/yiyi_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.YiYiAiChat"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".common.TestActivity"
            android:exported="false" />
        <activity
            android:name=".worldBook.ui.activity.WorldBookListActivity"
            android:exported="false" />
        <activity
            android:name=".worldBook.ui.activity.WorldBookEditActivity"
            android:exported="false" />
        <activity
            android:name=".aiChat.ui.activity.GroupChatActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".common.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".config.ui.activity.ConfigActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".aiChat.ui.activity.ChatActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".aiChat.ui.activity.CharacterEditActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".aiChat.ui.activity.ConversationEditActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>